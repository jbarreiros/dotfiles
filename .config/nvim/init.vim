" Neovim already has these on by default:
" - syntax on
" - filetype plugin indent on
" - set autoindent
" - set backspace=indent,eol,start
" - set incsearch
" - set laststatus=2
" - set wildmenu
" - set encoding=utf-8

set number
set ignorecase
set smartcase
set hlsearch
set clipboard=unnamedplus

" Indentation (8-space tabs are too big)
set tabstop=4
set shiftwidth=4
set expandtab

set colorcolumn=80,100
set list
